<%- include ("partials/head.ejs") %>


<div class="container">
    <div class="row">
        <div class="col-10 offset-1">
            <h3>Accounts</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-10 offset-1">
            <table class="table table-striped">
                <thead>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th></th>
                </thead>
                <tbody>
                    <% for(let account of accounts){ %>
                        <tr>
                            <td> <%= account.first_name %> </td>
                            <td> <%= account.last_name %> </td>
                            <td> <%= account.email %> </td>
                            <td> <%= account.phone %> </td>
                            <td>
                                <a href="/edit/<%=account._id%>" class="btn btn-primary">Edit</a>
                                <a href="/delete/<%=account._id%>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                       
                    <%  } %>                 
                 </tbody>
            </table>
        </div>
    </div>
   
</div>
<%- include ("partials/footer.ejs") %>